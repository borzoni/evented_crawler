<!DOCTYPE html>
<html>
  <head>
    <title>ClothesCrawler</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
   <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">ClothesCrawlers</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="<%= 'active' if current_page?(dashboard_path) %>"><a href="/dashboard">Dashboard</a></li>
          <li class="<%= 'active' if current_page?(crawlers_path) %>"><a href="/crawlers">Crawlers</a></li>
        </ul>
      </div>
   </nav>
    <%= yield %>
  </body>
</html>
